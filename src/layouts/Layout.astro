---
import Header from "../components/header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="App">
      <Header />
      <main class="App-main">
        <slot />
      </main>
    </div>
  </body>

  <style>
    .App-main {
      background-color: var(--main-background);
      height: calc(100vh - 114px);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: calc(10px + 2vmin);
      color: white;
      padding: 0 2em;
    }
  </style>
  <style is:global>
    :root {
      color-scheme: dark;
      --qwik-dark-blue: #006ce9;
      --qwik-light-blue: #18b6f6;
      --qwik-dirty-black: rgba(29, 32, 51, 0.5);
      --qwik-slate-gray: #374151;

      --text-color: #ffffff;
      --main-background: #272727;
      --header-background: var(--main-background);
      --footer-background: var(--main-background);
    }
    /* SHELL ---------------------------------------- */
    html {
      font-family:
        ui-sans-serif,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        "Helvetica Neue",
        Arial,
        "Noto Sans",
        sans-serif,
        "Apple Color Emoji",
        "Segoe UI Emoji",
        "Segoe UI Symbol",
        "Noto Color Emoji";
      background: var(--footer-background);
      tab-size: 4;
    }

    body {
      padding: 0;
      margin: 0;
      color: var(--text-color);
      line-height: inherit;
    }
  </style>
</html>
